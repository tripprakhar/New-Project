<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    tools:context=".Activities.MainActivity">

    <TextView
        android:id="@+id/welcomeTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/welcome_text"
        android:textColor="#121010"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/WelcomeImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="158dp"
        android:contentDescription="@string/todo1"
        app:srcCompat="@drawable/surgeon_doctor_pngrepo_com" />

    <Button
        android:id="@+id/signinId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/WelcomeImage"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="121dp"
        android:background="@drawable/rounded_button"
        android:text="@string/user_login"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/signupId"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/signinId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/user_signup"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>